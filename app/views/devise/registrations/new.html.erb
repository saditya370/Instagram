<div class="vh-100 d-flex justify-content-center align-items-center">
  <div>
    <div class= "card p-4 mb-3" style = "width: 28rem;">
      <div class = "card-body">
        <div class= "instagram-logo-link"></div>
        <p class = "text-center text-secondary fs-4 fw-semibold">
          Sign up to see photos and videos from your friends.
        </p>
        <div class = "d-flex justify-content-center">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "w-100"}) do |f| %>
          <div class="mb-3">
            <%= f.text_field :username, placeholder: "Username", class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.email_field :email, placeholder: "Email" ,autofocus: true,  class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.password_field :password, placeholder: "Password" , autocomplete: "new-password", class: "form-control" %>
          </div>


          <div class="mb-3">
            <%= f.submit "Sign Up", class: "btn btn-primary insta-primary w-100" %>
          </div>
          <% end %>
        </div>

        <hr class="border-secondary">
        <div class = "d-flex justify-content-center">
          <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
        </div>
      </div>
    </div>
    <div class= "card py-2" style = "width: 28rem;">
      <div class = "card-body">
        <p class="mb-6 text-center"> Already have an account? <%= link_to 'Login' ,root_path , class: "standard-link"%> </p>
      </div>
    </div>
  </div>
</div>
